                <SolidColorBrush Color="#FF0089D2" Opacity="0.7"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF0089D2" Opacity="0.7"/>
            </Button.Background>
        </Button>
        <Button Content="Valoraciones" HorizontalAlignment="Left" Margin="26,322,0,0" VerticalAlignment="Top" Width="113" Height="40" FontSize="14" FontWeight="Bold" Foreground="White">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF0089D2" Opacity="0.7"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF0089D2" Opacity="0.7"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnMensajeria" Content="Mensajeria" HorizontalAlignment="Left" Margin="157,322,0,0" VerticalAlignment="Top" Width="113" Height="41" FontSize="14" FontWeight="Bold" Foreground="White" Click="btnMensajeria_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF0089D2" Opacity="0.7"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF0089D2" Opacity="0.7"/>
            </Button.Background>
        </Button>
        <Image x:Name="imgFoto" Margin="15,49,848,347"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="319,78,37,32"/>
        <Label Content="Ofertas de empleo recomendadas:" HorizontalAlignment="Left" Margin="319,43,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Rectangle HorizontalAlignment="Center" Height="41" VerticalAlignment="Top" Width="1026">
            <Rectangle.Stroke>
                <SolidColorBrush Color="#FF062758" Opacity="0.85"/>
            </Rectangle.Stroke>
            <Rectangle.Fill>
                <SolidColorBrush Color="#FF062758" Opacity="0.85"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="15" Stroke="Black" VerticalAlignment="Bottom" Width="1043" Margin="-7,0,0,0">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FF062758" Opacity="0.85"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="lblNombreAspirante" Content="Nombre Aspirante" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Foreground="White" FontStyle="Italic"/>
        <Button x:Name="btnCerrarSesion" Content="Cerrar Sesión" HorizontalAlignment="Left" Margin="894,7,0,0" VerticalAlignment="Top" Height="30" Width="101" FontSize="14" FontWeight="Bold" FontStyle="Italic" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="btnCerrarSesion_Click"/>
        <Button Content="Solicitudes de&#xD;&#xA;     servicio" HorizontalAlignment="Left" Margin="96,392,0,0" VerticalAlignment="Top" Width="114" Height="41" FontSize="14" FontWeight="Bold" Foreground="White">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF0089D2" Opacity="0.7"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF0089D2" Opacity="0.7"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
