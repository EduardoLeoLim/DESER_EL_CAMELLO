        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:El_Camello.Vistas.Aspirante"
        mc:Ignorable="d"
        Title="MenuAspirante" Height="545" Width="1026" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Height="529" VerticalAlignment="Top">
        <Grid.Background>
            <SolidColorBrush Color="#FFDFDFDF" Opacity="1"/>
        </Grid.Background>
        <Button Content="Editar Perfil" HorizontalAlignment="Left" Margin="178,58,0,0" VerticalAlignment="Top" FontStyle="Italic" FontWeight="Normal" Width="71" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Button Content="Desactivar Perfil" HorizontalAlignment="Left" Margin="178,82,0,0" VerticalAlignment="Top" FontStyle="Italic" FontWeight="Normal" Background="{x:Null}">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FFDFDFDF" Opacity="0.1"/>
            </Button.BorderBrush>
        </Button>
        <Button Content="Activar Perfil" HorizontalAlignment="Left" Margin="178,107,0,0" VerticalAlignment="Top" FontStyle="Italic" FontWeight="Normal" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Button Content="  Solicitar &#xD;&#xA;  empleo" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="26,0,0,0" VerticalAlignment="Center" Width="113" Height="41" FontSize="14" FontWeight="Bold" Foreground="White" Click="Button_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF0089D2" Opacity="0.7"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF0089D2" Opacity="0.7"/>
            </Button.Background>
        </Button>
        <Button Content="Contrataciones &#xD;&#xA;    y servicios" HorizontalAlignment="Left" Margin="157,243,0,0" VerticalAlignment="Top" Width="113" Height="41" FontSize="14" FontWeight="Bold" Foreground="White" >
