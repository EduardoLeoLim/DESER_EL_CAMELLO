            </Rectangle.Fill>
        </Rectangle>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="180,62,19,39"/>
        <Button Content="Aspirantes" HorizontalAlignment="Left" Margin="53,272,0,0" VerticalAlignment="Top" Height="29" Width="127" Foreground="White" FontSize="15" FontWeight="Bold">
