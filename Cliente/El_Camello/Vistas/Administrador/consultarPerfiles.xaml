            </Button.Background>
        </Button>
        <Button Content="Empleadores" HorizontalAlignment="Left" Margin="53,349,0,0" VerticalAlignment="Top" Height="29" Width="127" Foreground="White" FontSize="15" FontWeight="Bold">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF0089D2" Opacity="0.7"/>
